<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="MobilpayCreditCardConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">mobilpay_cc</argument>
        </arguments>
    </virtualType>
    <type name="Monogo\Mobilpay\Model\CreditAdapter">
        <arguments>
            <argument name="config" xsi:type="object">MobilpayCreditCardConfig</argument>
        </arguments>
    </type>
    <type name="Monogo\Mobilpay\Model\CreditCardConfigProvider">
        <arguments>
            <argument name="config" xsi:type="object">MobilpayCreditCardConfig</argument>
        </arguments>
    </type>
</config>
